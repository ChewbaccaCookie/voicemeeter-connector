{
    "name": "root",
    "private": true,
    "type": "module",
    "description": "Root directory for the Voicemeeter Connector library. If you want to use the library, please install the package from the lib directory.",
    "repository": "https://github.com/ChewbaccaCookie/voicemeeter-connector",
    "workspaces": [
        "lib",
        "examples/*"
    ],
    "scripts": {
        "format": "npx prettier --write .",
        "build": "npm run build --workspace=lib",
        "lint": "tsc --project tsconfig.json --noEmit && eslint ."
    },
    "devDependencies": {
        "@chewbaccacookie/eslint-config": "^1.1.1",
        "@chewbaccacookie/prettier-config": "^1.2.0",
        "eslint": "^9.29.0",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3"
    }
}